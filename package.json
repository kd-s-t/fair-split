{
  "name": "safesplit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' next dev --turbopack --port 3000 --hostname 0.0.0.0",
    "dev:fast": "NODE_OPTIONS='--max-old-space-size=8192' next dev --turbopack --port 3000 --hostname 0.0.0.0",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build --turbopack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "prepare": "husky",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:watch": "jest --watch",
    "clean": "rm -rf .next out dist",
    "clean:all": "rm -rf .next out dist node_modules/.cache",
    "dev:reset": "rm -rf .next && npm run dev"
  },
  "dependencies": {
    "@dfinity/agent": "^3.0.0",
    "@dfinity/auth-client": "^3.0.0",
    "@dfinity/candid": "^3.0.0",
    "@dfinity/identity": "^3.0.0",
    "@dfinity/principal": "^3.0.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reduxjs/toolkit": "^2.2.3",
    "@tailwindcss/node": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "class-variance-authority": "^0.7.1",
    "crypto-browserify": "^3.12.1",
    "framer-motion": "^12.23.6",
    "lightningcss": "^1.30.1",
    "lucide-react": "^0.525.0",
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "sonner": "^2.0.6",
    "three": "^0.178.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-redux": "^7.1.34",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=20.17.0"
  }
}
