# DFX Dockerfile for Internet Computer development on EC2
FROM node:20.17.0

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV DFX_NETWORK=local
ENV DFXVM_INIT_YES=true
ENV PATH="/home/dfx/.local/share/dfx/bin:$PATH"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    unzip \
    libssl-dev \
    pkg-config \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash dfx

# Switch to dfx user for installing dfx
USER dfx
WORKDIR /home/dfx

# Install DFX non-interactively
RUN curl -fsSL https://internetcomputer.org/install.sh -o install.sh && \
    chmod +x install.sh && \
    ./install.sh && \
    rm install.sh && \
    /home/dfx/.local/share/dfxvm/bin/dfxvm install latest && \
    /home/dfx/.local/share/dfxvm/bin/dfxvm default latest

# Switch back to root to install global npm tools
USER root
RUN npm install -g \
    nodemon \
    ts-node \
    typescript \
    @types/node \
    eslint \
    prettier

# Switch back to dfx user for container runtime
USER dfx
WORKDIR /app

# Expose replica port
EXPOSE 4943

# Start the local Internet Computer replica
CMD ["dfx", "start", "--clean", "--host", "0.0.0.0:4943"]
