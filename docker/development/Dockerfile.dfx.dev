# Full DFX Dockerfile for Internet Computer development on EC2
FROM node:20.17.0

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV DFX_NETWORK=local
ENV DFXVM_INIT_YES=true
ENV PATH="/home/dfx/.local/share/dfx/bin:$PATH"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    python3 \
    python3-pip \
    unzip \
    libssl-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root user named dfx
RUN useradd -m -s /bin/bash dfx

# Switch to the dfx user and install DFX
USER dfx
WORKDIR /home/dfx

RUN curl -fsSL https://internetcomputer.org/install.sh -o install.sh && \
    chmod +x install.sh && \
    ./install.sh && \
    rm install.sh

# Confirm dfx is installed
RUN dfx --version

# Set app working directory
WORKDIR /app

# Install global Node.js dev tools with unsafe perms (safe in Docker)
RUN npm install -g --unsafe-perm \
    nodemon \
    ts-node \
    typescript \
    @types/node \
    eslint \
    prettier

# Expose DFX replica port
EXPOSE 4943

# Default command to start replica
CMD ["dfx", "start", "--clean", "--host", "0.0.0.0:4943"]
