# DFX Dockerfile for Internet Computer development on EC2
FROM node:20.17.0

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV DFX_NETWORK=local
ENV DFXVM_INIT_YES=true
ENV PATH="/home/dfx/.local/share/dfx/bin:$PATH"

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    unzip \
    libssl-dev \
    pkg-config \
    build-essential \
    python3 \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash dfx

# Switch to dfx user to install DFX
USER dfx
WORKDIR /home/dfx

# Install DFX non-interactively and set default version via sourced env
RUN curl -fsSL https://internetcomputer.org/install.sh -o install.sh && \
    chmod +x install.sh && \
    ./install.sh && \
    rm install.sh && \
    /bin/bash -c "source /home/dfx/.local/share/dfx/env && dfxvm install latest && dfxvm default latest"

# Switch back to root to install global dev tools
USER root
RUN npm install -g \
    nodemon \
    ts-node \
    typescript \
    @types/node \
    eslint \
    prettier

# Switch back to dfx user for runtime
USER dfx
WORKDIR /app

# Expose replica port
EXPOSE 4943

# Default command (overridden in docker-compose.yml)
CMD ["bash"]
